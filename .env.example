# Atomic Red Team MCP Server Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Server Configuration
# =============================================================================

# Transport protocol for MCP communication
# Options: stdio, sse, streamable-http
# Default: stdio
ART_MCP_TRANSPORT=stdio

# Server host address (used for HTTP/SSE transports)
# Default: 0.0.0.0
ART_MCP_HOST=0.0.0.0

# Server port number (used for HTTP/SSE transports)
# Default: 8000
# Range: 1-65535
ART_MCP_PORT=8000

# =============================================================================
# Data Directory Configuration
# =============================================================================

# Local directory path where atomic test files are stored
# Default: ./atomics (relative to package installation)
# Example: /path/to/custom/atomics
# ART_DATA_DIR=/tmp/atomics

# =============================================================================
# GitHub Repository Configuration
# =============================================================================

# GitHub URL for atomics repository
# Default: https://github.com
ART_GITHUB_URL=https://github.com

# GitHub user/organization name
# Default: redcanaryco
ART_GITHUB_USER=redcanaryco

# GitHub repository name
# Default: atomic-red-team
ART_GITHUB_REPO=atomic-red-team

# =============================================================================
# Security Configuration
# =============================================================================

# Enable the execute_atomic tool
# WARNING: Only enable in controlled, isolated environments (test VMs, sandboxes)
# Options: true, false, 1, 0, yes, no
# Default: false
ART_EXECUTION_ENABLED=false

# =============================================================================
# Authentication Configuration
# =============================================================================

# Static bearer token for authentication
# If not set, authentication is disabled
# Example: ART_AUTH_TOKEN=your-secure-random-token-here
# IMPORTANT: Use a strong, randomly generated token in production
# ART_AUTH_TOKEN=

# Client identifier for authenticated requests
# Default: authorized-client
ART_AUTH_CLIENT_ID=authorized-client

# Comma-separated list of OAuth scopes for authentication
# Default: read, admin
ART_AUTH_SCOPES="read, admin"
